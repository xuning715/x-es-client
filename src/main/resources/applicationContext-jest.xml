<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans">
    <bean id="jestFactory" class="com.x.es.JestTemplate">
        <constructor-arg name="nodes" value="${jestNodes}" />
        <constructor-arg name="connTimeOut" value="${jestConnTimeOut}" />
        <constructor-arg name="readTimeOut" value="${jestReadTimeOut}" />
    </bean>
</beans>